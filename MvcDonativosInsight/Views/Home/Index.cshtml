@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Aplicacion donativos</h1>
    <form method="post">
        <label>Usuario:</label>
        <input type="text" name="usuario" class="form-control" required />
